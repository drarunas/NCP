{
    "manifest_version": 3,
    "name": "NCP",
    "version": "1.0",
    "description": "NCPs",
    
    "content_scripts": [
        {
            "matches": [
                "https://mts-ncomms.nature.com/*"
            ],
            "js": [
                "jquery.js",
                "appearance.js",
                "bootstrap.bundle.min.js",
                "dataTables.js",
                "dataTables.responsive.js",
                "dataTables.bootstrap5.js",
                "responsive.bootstrap5.js",
                "contentMTS.js",
                "home.js",
                "folder.js",
                "msview.js",
                "inviterevs.js",
                "circulate.js",
                "helper_functions.js"
            ],
            "css": [
                "custom.css",
                "dataTables.css",
                "responsive.bootstrap5.css",
                "bootstrap.min.css",
                "dataTables.bootstrap5.css"

            ]
        },
        {
            "matches": [
                "https://reviewerfinder.nature.com/*"
            ],
            "js": [
                "jquery.js",
                "contentReviewerFinder.js",
                "helper_functions.js"
            ],
            "css": [
                "customRF.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "setcolor.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
      "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": false,
      "path": "rules.json"
    }]
  },
    "host_permissions": [
        "https://reviewerfinder.nature.com/*",
        "https://mts-ncomms.nature.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}
