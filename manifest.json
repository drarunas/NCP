{
    "manifest_version": 3,
    "name": "NCP",
    "version": "1.0",
    "description": "NCPs",
    "content_scripts": [
        {
            "matches": [
                "https://mts-ncomms.nature.com/*"
            ],
            "js": [
                "jquery.js",
                "contentMTS.js"
            ],
            "css": [
                "custom.css"
            ]
        },
        {
            "matches": [
                "https://reviewerfinder.nature.com/*"
            ],
            "js": [
                "jquery.js",
                "contentReviewerFinder.js"
            ],
            "css": [
                "customRF.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "setcolor.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting",
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess"
    ],
    "host_permissions": [
        "https://reviewerfinder.nature.com/*",
        "https://mts-ncomms.nature.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}
